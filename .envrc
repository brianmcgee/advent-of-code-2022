#!/usr/bin/env bash
# Environment variables for the project. See https://direnv.net/
if nix flake metadata &>/dev/null; then
  use flake
else
  use nix
fi


rsync \
        --recursive \
        --delete \
        --copy-links \
        --perms \
        --chmod=ugo=rwX \
        $(rustc --print sysroot)/lib/rustlib/src/rust/ \
        .rust-std

ln -s $DEVSHELL_DIR/bin .rust-bin